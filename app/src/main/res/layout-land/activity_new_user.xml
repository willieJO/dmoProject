<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="@color/backgroundcolor"
    tools:context=".view.NewUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edittext_nome_locador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="@string/nome_do_locador"
            android:background="@drawable/edittext_border"
            android:inputType="text"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edittext_cnh_locador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/edittext_border"
            android:hint="@string/cnh"
            android:inputType="number"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edittext_categoria_locador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="24dp"
            android:hint="@string/categoria_cnh"
            android:inputType="text"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edittext_data_cnh_locador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/edittext_border"
            android:hint="@string/data_da_cnh"
            android:inputType="date"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edittext_cpf_locador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="24dp"
            android:hint="@string/cpf"
            android:inputType="number"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edittext_logradouro_locador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="24dp"
            android:hint="@string/logradouro"
            android:inputType="text"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edittext_numero_locador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_border"
            android:layout_marginTop="24dp"
            android:hint="@string/n_mero"
            android:inputType="number"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edittext_bairro_locador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="@string/bairro"
            android:background="@drawable/edittext_border"
            android:inputType="text"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edittext_cidade_locador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/edittext_border"
            android:hint="@string/cidade"
            android:inputType="text"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edittext_estado_locador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="@string/estado"
            android:background="@drawable/edittext_border"
            android:inputType="text"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/edittext_cep_locador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="@string/cep"
            android:inputType="number"
            android:padding="8dp"
            android:background="@drawable/edittext_border"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edittext_telefone_locador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="@string/telefone"
            android:inputType="number"
            android:padding="8dp"
            android:background="@drawable/edittext_border"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edittext_email_locador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/edittext_border"
            android:hint="@string/email"
            android:inputType="text"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edittext_data_nasc_locador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="@string/data_de_nascimento"
            android:inputType="date"
            android:background="@drawable/edittext_border"
            android:padding="8dp"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/edittext_senha_locador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="@string/senha"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textAlignment="center"
            android:background="@drawable/edittext_border"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/termos_de_uso"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/leia_me"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/leia_me" />

        </LinearLayout>

        <Button
            android:id="@+id/button_save_locador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/fontcolor"
            android:layout_marginTop="32dp"
            android:text="@string/salvar" />

    </LinearLayout>
</ScrollView>